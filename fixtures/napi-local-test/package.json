{
  "name": "napi-local-test",
  "version": "1.0.0",
  "private": true,
  "description": "Local testing example for fob-native NAPI bindings - for development workflow",
  "type": "module",
  "scripts": {
    "rebuild": "cd ../../crates/fob-native && napi build --platform && node scripts/sync-binary.js",
    "rebuild:release": "cd ../../crates/fob-native && napi build --platform --release && node scripts/sync-binary.js",
    "test": "node test-all.js",
    "test:simple": "node test-simple.js",
    "test:advanced": "node test-advanced.js",
    "test:errors": "node test-errors.js"
  },
  "dependencies": {
    "@fox-uni/fob": "file:../../crates/fob-native"
  }
}
