{
  "$schema": "https://oxc.rs/schemas/oxlint/v1.json",
  "rules": {
    "react/react-in-jsx-scope": "off",
    "typescript/no-explicit-any": "warn",
    "typescript/no-unused-vars": "warn",
    "import/no-unresolved": "off",
    "no-unused-vars": "warn"
  },
  "ignore": [
    "node_modules",
    "dist",
    "build",
    "target",
    "pkg",
    ".turbo",
    "coverage",
    ".next",
    "out",
    "**/*.d.ts",
    "**/dist/**",
    "**/build/**",
    "crates/**/pkg/**",
    "packages/**/wasm/**/*.js",
    "packages/playground/dist-tests/**"
  ]
}
