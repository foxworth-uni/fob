{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "napi:build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**",
        "*.ts",
        "*.tsx",
        "tsconfig.json",
        "crates/**/*.rs",
        "Cargo.toml",
        "Cargo.lock"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        "target/**",
        "pkg/**",
        ".turbo/**",
        ".next/**",
        "packages/**/dist/**",
        "packages/**/wasm/**"
      ],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**",
        "tests/**",
        "vitest.config.ts",
        "tsconfig.json",
        "crates/**/*.rs"
      ],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:watch": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "src/**", "tests/**", "vitest.config.ts", "tsconfig.json"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": [],
      "inputs": ["$TURBO_DEFAULT$", "src/**", "crates/**/*.rs"],
      "outputs": [],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "rust:build": {
      "inputs": ["crates/**/*.rs", "Cargo.toml", "Cargo.lock"],
      "outputs": ["target/**"],
      "cache": true
    },
    "rust:test": {
      "dependsOn": ["rust:build"],
      "inputs": ["crates/**/*.rs", "Cargo.toml"],
      "outputs": [],
      "cache": true
    },
    "napi:build": {
      "inputs": ["crates/fob-native/src/**/*.rs", "crates/fob-native/Cargo.toml"],
      "outputs": ["packages/fob-bundler/index.node"],
      "cache": true
    }
  },
  "globalEnv": [
    "CARGO_HOME",
    "RUSTC_WRAPPER",
    "RUST_LOG",
    "WASMOPT",
    "WASM_OPT",
    "FOB_REAL_WASM_OPT"
  ]
}
