      "import": "./dist/index.js"
    },
    "./cloudflare": {
      "types": "./dist/platforms/cloudflare.d.ts",
      "import": "./dist/platforms/cloudflare.js"
    },
    "./deno": {
      "types": "./dist/platforms/deno-deploy.d.ts",
